class "test_class";

inclass


  func new(var value: string): TestClass;

    trace("address while creating object:");
    trace(System.varAddr(value));

    result = self.create;
    result.value = value;
  end;

inobject


  var value: string;


  proc edit_value;
    
    self.value = self.value +"x";
  end;


  func return_var: string;
    
    return self.value;
  end;


  func return_addr: integer;
    
    return System.varAddr(self.value);
  end;
end