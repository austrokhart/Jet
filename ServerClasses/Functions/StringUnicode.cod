class "Класс для работы со строками и Unicode";
import classes Functions.String;

inclass


  func str_char_is_unicode(str: string; index: integer = 1): boolean;

    var i: integer;

    if not str_starts_with(str, '\u', index) then return false; end;

    for i = 1..4 do
      if str_pos('0123456789abcdef', str_char_at(str, index +2 +i -1)) = -1 then return false; end;
    end;
      
    return true;
  end;
end