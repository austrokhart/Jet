class "Класс для работы с проверками";
import classes Functions.Variable;

inclass


  -- типы сравнения
  type comparison_type = (
    COMPARISON_IS_EQUAL,
    COMPARISON_IS_TRUE,
    COMPARISON_IS_FALSE
  );


  func assert_equal(value, expected: variant; inverted: boolean = false; comment: string = ""): UnitTesting.AssertResult;
    
    return UnitTesting.AssertResult.new(value, expected, self.COMPARISON_IS_EQUAL, var_equal(value, expected), inverted, comment);
  end;

  func assert_true(value: variant; inverted: boolean = false; comment: string = ""): UnitTesting.AssertResult;
    
    return UnitTesting.AssertResult.new(value, true, self.COMPARISON_IS_TRUE, var_equal(value, true), inverted, comment);
  end;

  func assert_false(value: variant; inverted: boolean = false; comment: string = ""): UnitTesting.AssertResult;
    
    return UnitTesting.AssertResult.new(value, false, self.COMPARISON_IS_FALSE, var_equal(value, false), inverted, comment);
  end;
end