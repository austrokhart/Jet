class inherited Methods.Functions.Array.Iterable "Интерфейс для работы с массивом методом map";
import classes Functions.Array;

inclass


  func new(array: variant[]; path: integer[] = nil): Methods.Functions.Array.Map;
    
    result = self.create;

    result.__array = array;
    result.__path  = path;
    result.__to_start;
  end;

inobject


  var __result: variant[];


  proc __apply(value: variant);
    
    self.__result[self.__index] = value;
  end;


  proc __assign(var variable: variant);
    
    variable = self.__result;
  end;
end